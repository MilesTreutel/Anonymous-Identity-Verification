# Private key for deployment (DO NOT commit your actual private key!)
PRIVATE_KEY=your_private_key_here

# Ethereum RPC URLs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/your_infura_key_here
MAINNET_RPC_URL=https://mainnet.infura.io/v3/your_infura_key_here

# Infura API Key
INFURA_API_KEY=your_infura_api_key_here

# Etherscan API Key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Mnemonic for development (DO NOT use in production!)
MNEMONIC=test test test test test test test test test test test junk

# Gas Reporter (set to true to enable gas reporting)
REPORT_GAS=false

# Network Configuration
# Use 'sepolia' for testnet deployment
# Use 'localhost' for local hardhat network
NETWORK=sepolia

# Contract Deployment Settings
DEPLOY_GAS_LIMIT=8000000
DEPLOY_GAS_PRICE=

# FHEVM Network Configuration
ZAMA_DEVNET_RPC_URL=https://devnet.zama.ai
ZAMA_DEVNET_CHAIN_ID=8009
